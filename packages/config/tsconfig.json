{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "target": "esnext",
        "lib": ["es2018"],
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "baseUrl": "./src",
    },
    "exclude": [
        "bin",
        "node_modules"
    ]
}
